<body>

  <%- include('navbar') -%>

    <%- include('sidebar') -%>

      <main class="mt-3 px-3">
        <div class="container-fluid">
          <div class="row">
            <div class="col-md-12 fw-bold fs-3">Statistic</div>
          </div>

          <div class="row mt-3">

            <div class="col-md-4">
              <div class="card text-dark bg-light" style="max-width: 18rem;">
