    <div class="modal-body">
      
        <form action="">
            <div class="mb-3">
                <label for="pname" class="form-label text-capitalize">Enter product name</label>
                <input type="text" name="pname" id="pname" class="form-control" placeholder="Enter Name of product" required>
            </div>
            <div class="mb-3">
              <label for="ptype" class="form-label text-capitalize">Product Type</label>
              <input type="text" name="ptype" id="ptype" class="form-control" placeholder="Enter Type of Product" required>
          </div>
            <div class="mb-3">
              <label for="price" class="form-label text-capitalize">Price</label>
              <input type="text" name="price" id="price" class="form-control" placeholder="Enter Price" required>
          </div>
          <div class="mb-3">
            <label for="qty" class="form-label text-capitalize">Quantity</label>
            <input type="text" name="qty" id="qty" class="form-control" placeholder="Quantity" required>
        </div>
        </form>
    </div>
    <div class="modal-footer d-block">
      <button type="button" class="btn btn-success" data-bs-dismiss="modal">Submit</button>
