<!DOCTYPE html>
<html lang="en">

<head>
  <!-- CSS only -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
  <link rel="stylesheet" href="/css/dash.css">
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Admin::View Shops</title>


</head>

<body>

  <%- include('navbar') -%>

    <%- include('sidebar') -%>

      <main class="mt-3 px-3">
        <div class="container-fluid">

          <div class="row mt-3">

            <div class="card">
              <div class="card-body">
                <table class="table table-bordered text-center">
                  <thead>
                    <tr>
                      <th scope="col">#</th>
                      <th scope="col">Shop Owner Name</th>
                      <th scope="col">Shop Name </th>
                      <th scope="col">Total Employees</th>
                      <th scope="col">Shop Email</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% let index = 1 %>
                    <% shops.forEach((shop) => { %>
                    <tr>
                      <th scope="row"><%= index++ %></th>
                      <td><%= shop.name %></td>
                      <td><%= shop.shop_name %></td>
                      <td><%= total_employees[index-2] %></td>
                      <td><%= shop.shop_email %> </td>
                    </tr>
                    <% }); %>
                  </tbody>
                </table>
              </div>
            </div>
          </div>


      </main>

      <!-- JavaScript Bundle with Popper -->

      <script src="https://kit.fontawesome.com/c03e57a261.js" crossorigin="anonymous"></script>
      <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css">
      <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
        crossorigin="anonymous"></script>

</body>

</html>